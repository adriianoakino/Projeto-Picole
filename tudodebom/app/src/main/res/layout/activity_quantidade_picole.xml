<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.tudodebom.tudodebom.QuantidadePicoleActivity">


    <TextView
        android:id="@+id/tvQuantidade"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Quantidade"
        android:layout_alignBaseline="@+id/etQuantidade"
        android:layout_alignBottom="@+id/etQuantidade"
        android:layout_alignLeft="@+id/tvPrecoTotal"
        android:layout_alignStart="@+id/tvPrecoTotal"
        android:inputType="phone"/>


    <EditText
        android:id="@+id/etQuantidade"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp" />


    <TextView
        android:id="@+id/tvPrecoUnitario"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Preço Unitário: R$"
        android:layout_alignBaseline="@+id/etPrecoUnitario"
        android:layout_alignBottom="@+id/etPrecoUnitario"
        android:layout_alignLeft="@+id/tvQuantidade"
        android:layout_alignStart="@+id/tvQuantidade" />

    <EditText
        android:id="@+id/etPrecoUnitario"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1,50"
        android:layout_below="@+id/tvQuantidade"
        android:layout_alignLeft="@+id/etQuantidade"
        android:layout_alignStart="@+id/etQuantidade"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/tvPrecoTotal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Preço Total: R$"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBottom="@+id/etPrecoTotal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etPrecoTotal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="186dp"
        android:layout_below="@+id/tvPrecoUnitario"
        android:layout_alignRight="@+id/etQuantidade"
        android:layout_alignEnd="@+id/etQuantidade"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btnAdicionarPedido"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        tools:layout_editor_absoluteY="349dp"
        tools:layout_editor_absoluteX="104dp"
        android:layout_below="@+id/etPrecoTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>
