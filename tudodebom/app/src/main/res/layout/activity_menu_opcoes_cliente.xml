<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drower"
    tools:context="com.company.tudodebom.tudodebom.menu_opcoes_cliente">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/novopedido"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/novopedido"
            android:layout_marginTop="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/pedidosrealizados"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/pedidosrealizados"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/novopedido"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
</RelativeLayout>
        <RelativeLayout
        android:id="@+id/editbox"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:background="@color/colorMild"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B22222"
                android:text="sair"/>

        </RelativeLayout>

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:layout_marginTop="70dp"
        android:id="@+id/openMenuLateral"
        />

</android.support.v4.widget.DrawerLayout>
