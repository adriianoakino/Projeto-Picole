<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.tudodebom.tudodebom.ItemPedidosRealizados">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Total R$"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/totalItemPedidoRealizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="0,00" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Compra"
        android:layout_alignBaseline="@+id/dataItemPedidoRealizado"
        android:layout_alignBottom="@+id/dataItemPedidoRealizado"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/dataItemPedidoRealizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="04/03/2017"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/totalItemPedidoRealizado"
        android:layout_alignEnd="@+id/totalItemPedidoRealizado" />

    <ListView
        android:id="@+id/list_item_pedidoRealizado_sorvete"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></ListView>
</RelativeLayout>
